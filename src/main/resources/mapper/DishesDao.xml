<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.lingnan.eattingwhat.dao.DishesDao">

    <resultMap type="edu.lingnan.eattingwhat.entity.Dishes" id="DishesMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="storeId" column="store_id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="price" column="price" jdbcType="OTHER"/>
        <result property="describle" column="describle" jdbcType="VARCHAR"/>
        <result property="image" column="image" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="DishesMap">
        select
          id, store_id, name, price, describle, image
        from eattingwhat.dishes
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="DishesMap">
        select
          id, store_id, name, price, describle, image
        from eattingwhat.dishes
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="DishesMap">
        select
          id, store_id, name, price, describle, image
        from eattingwhat.dishes
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="storeId != null">
                and store_id = #{storeId}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="price != null">
                and price = #{price}
            </if>
            <if test="describle != null and describle != ''">
                and describle = #{describle}
            </if>
            <if test="image != null and image != ''">
                and image = #{image}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into eattingwhat.dishes(store_id, name, price, describle, image)
        values (#{storeId}, #{name}, #{price}, #{describle}, #{image})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update eattingwhat.dishes
        <set>
            <if test="storeId != null">
                store_id = #{storeId},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="describle != null and describle != ''">
                describle = #{describle},
            </if>
            <if test="image != null and image != ''">
                image = #{image},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from eattingwhat.dishes where id = #{id}
    </delete>

</mapper>